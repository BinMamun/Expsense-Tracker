@model IEnumerable<ExpenseCategory>

@{
    ViewData["Title"] = "Index";
}


<div class="text-center">
    <h2>Expense Categories</h2>
    <hr />
</div>

<div class="col-11">
    <div class="d-flex justify-content-end mb-2">
        <a title="Create New Category" class="d-flex justify-content-center align-items-center btn btn-outline-success"
           asp-controller="Categories" asp-action="Create"><i class="bi bi-plus-lg"></i></a>
    </div>
</div>

<div class="row d-flex justify-content-center">

    <div class="col-10">
        <table class="table table-hover">
            <thead class="bg-success bg-opacity-80">
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(x => x.Category)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody class=" bg-success bg-opacity-10">
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.Category</td>
                        <td class="text-center">
                            <a title="Edit" class="btn btn-outline-dark" asp-controller="Categories" asp-action="Edit" asp-route-id="@d.Id"><i class="bi bi-pencil"></i></a>
                            <a title="Delete" class="btn btn-outline-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@d.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

@section styles{
    <link href="~/libs/icon/font/bootstrap-icons.css" rel="stylesheet" />
} 